/**index.wxss**/
.container{
  position: relative;
  height: 100vh;
}
.change{
  color: #8995a1;
  font-size: 30rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
}
.change .icon-down {
  color: #8995a1;
  font-size: 20rpx;
}
.input-area {
  position: relative;
}
.textarea {
  padding-left: 20rpx;
  background: #fff;
  border-bottom: 1px solid #c7cee0;
}
.input-area textarea {
  background-color: #fff;
  padding: 30rpx 0 30rpx 30rpx;
  width: calc(100% - 48rpx);
  margin: 0;
  box-sizing: border-box;
}
.close {
  position: absolute;
  right: 12rpx;
  top: 20rpx;
  z-index: 100;
  font-size: 40rpx;
  color: #888;
}
.input-area .text-area {
  min-height: 80rpx;
  padding: 40rpx;
  background-color: #fff;
}
.text-title {
  padding-left:20rpx;
  font-size: 28rpx;
  color: #8995a1;
}
.text-result {
  padding: 20rpx 0;
}